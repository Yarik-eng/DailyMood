# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=change-me-to-random-64-character-string

# Database
# SQLite (development):
# DATABASE_URL=sqlite:///data/dailymood.db
# PostgreSQL (production):
DATABASE_URL=postgresql://user:password@localhost:5432/dailymood

# Server
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000

# Session Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Redis (optional, for session storage and caching)
# REDIS_URL=redis://:password@localhost:6379/0

# CORS (якщо фронтенд окремо)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email (для notifications - optional)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Monitoring (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Performance
# GUNICORN_WORKERS=4
# GUNICORN_THREADS=2
# GUNICORN_TIMEOUT=30
